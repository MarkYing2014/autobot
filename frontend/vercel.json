{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["sfo1"],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://api.your-domain.com"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.your-domain.com/api/:path*"
    }
  ]
}
